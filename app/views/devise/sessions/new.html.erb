<div class="container">
  <div class="row">
       <div class="col-sm-6 col-md-4 col-md-offset-4">
           <div class="account-wall">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="field">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, placeholder: "mail@mail.cl", :class =>'form-signin form-control' %>
                  </div>
                  <br/>
                  <div class="field">
                    <%= f.label :contraseña %><br />
                    <%= f.password_field :password, autocomplete: "off", placeholder: "contraseña", :class =>'form-signin form-control' %>
                  </div>
                  <br/>
                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :recuerdame %>
                    </div>
                  <% end -%>
                  <br/>
                  <div class="actions">
                    <%= f.submit "Ingresar", :class =>'btn btn-primary btn-submit' %>
                  
                  </div>
                <% end %>
            </div>
        </div>
  </div>
</div>
